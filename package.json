{
  "name": "@eastplayers/platform-ui",
  "version": "1.0.1",
  "description": "Platform UI",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "test": "jest --verbose=false",
    "test:push": "cross-env CI=true react-scripts test --testTimeout=20000",
    "test:coverage": "npm test -- --noStackTrace --coverage --watchAll=false --verbose=true --testTimeout=20000",
    "test:staged": "react-scripts test --maxWorkers=4 --noStackTrace --findRelatedTests --watchAll=false --verbose=false",
    "view:coverage": "open coverage/lcov-report/index.html",
    "build": "rollup -c",
    "build:tsc": "tsc",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
    "lint": "tslint -p tsconfig.json",
    "version": "yarn format && git add -A src",
    "postversion": "git push && git push --tags",
    "sb": "start-storybook -p 6006",
    "build-storybook": "build-storybook"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run typecheck && npm run test"
    }
  },
  "keywords": [
    "Platform",
    "UI"
  ],
  "author": "Eastplayers <hello@eastplayers.io> (https://github.com/Eastplayers)",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Eastplayers/platform-ui.git"
  },
  "bugs": {
    "url": "https://github.com/Eastplayers/platform-ui/issues"
  },
  "homepage": "https://storybook.eastplayers.io",
  "devDependencies": {
    "@babel/core": "^7.20.12",
    "@babel/preset-env": "^7.20.2",
    "@babel/preset-typescript": "^7.21.0",
    "@rollup/plugin-json": "^6.0.0",
    "@rollup/plugin-terser": "^0.4.0",
    "@rollup/plugin-typescript": "^11.0.0",
    "@storybook/addon-actions": "^6.5.16",
    "@storybook/addon-controls": "^6.5.16",
    "@storybook/addon-essentials": "^6.5.16",
    "@storybook/addon-interactions": "^6.5.16",
    "@storybook/addon-links": "^6.5.16",
    "@storybook/builder-webpack4": "^6.5.16",
    "@storybook/jest": "^0.0.10",
    "@storybook/manager-webpack4": "^6.5.16",
    "@storybook/react": "^6.5.16",
    "@storybook/testing-library": "^0.0.13",
    "@types/react": "^18.0.28",
    "babel-loader": "^8.3.0",
    "eslint": "^8.34.0",
    "fs": "^0.0.1-security",
    "husky": "^8.0.3",
    "postcss": "^8.4.21",
    "prettier": "^2.8.4",
    "rollup": "^3.15.0",
    "rollup-plugin-babel": "^4.4.0",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-scss": "^4.0.0",
    "sass": "^1.59.2",
    "sass-loader": "^13.2.0",
    "storybook-addon-sass-postcss": "^0.1.3",
    "storybook-dark-mode": "^2.1.1",
    "ts-jest": "^29.0.5",
    "ts-node": "^10.9.1",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.9.5"
  },
  "files": [
    "lib/**/*"
  ],
  "dependencies": {
    "@rollup/plugin-replace": "^5.0.2",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/react-test-renderer": "^18.0.0",
    "@wojtekmaj/enzyme-adapter-react-17": "^0.8.0",
    "classnames": "^2.3.2",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-test-renderer": "^18.2.0"
  },
  "type": "module",
  "moduleResolution": "node",
  "directories": {
    "lib": "lib",
    "test": "test"
  }
}
